@page
@model Budżet_Domowy.Pages.Modifies.ModifyBudgetModel

@{
    ViewData["Title"] = "ModifyBudget";
}

<h1>ModifyBudget</h1>

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Budget.Id" />
            <input asp-for="Budget.OwnerId" type="hidden" />
            <input asp-for="Budget.CreationTime" type="hidden" />
            <div class="form-group">
                <label asp-for="Budget.Name" class="control-label"></label>
                <input asp-for="Budget.Name" class="form-control" />
                <input asp-for="Budget.isShared" class="form-control" type="checkbox" />
                <span asp-validation-for="Budget.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

